<?xml version="1.0"?>
<robot name="manipulator">

  <material name="Blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="Black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="White">
    <color rgba="1 1 1 1"/>
  </material>
  
<!--LINKS-->

<link name = "Base">
 <visual>
  <geometry>
   <box size="0.3 0.3 0.3" />
  </geometry>
  <material name = "White"/>
 </visual>
</link>

<link name = "Base_Shoulder">
 <visual>
  <geometry>
   <box size="0.3 0.3 0.9" />
  </geometry>
  <origin xyz = "0 0 0.3"/>
 </visual>
</link>

<link name="Shoulder_Elbow">
 <visual>
  <geometry>
   <box size ="0.3 0.3 0.9"/>
  </geometry>
  <material name = "Black"/>
  <origin rpy = "1.57075 0 0" xyz = "0 0.3 0"/>
 </visual>
</link>

<link name="Elbow_Forearm">
 <visual>
  <geometry>
   <box size ="0.3 0.3 0.6"/>
  </geometry>
  <material name = "Blue"/>
  <origin rpy = "1.57075 0 0" xyz = "0 0.3 0"/>
 </visual>
</link>

<link name = "tool_null">
</link>

<link name = "Gripper_base">
 <visual>
  <geometry>
   <box size = "0.3 0.3 0.3" />
  </geometry>
  <material name = "White"/>
  <origin rpy = "0 0 0" xyz = "0 0.15 0"/>
 </visual>
</link>

<link name = "Gripper_finger_1">
 <visual>
  <geometry>
   <box size = "0.1 0.6 0.2"/>
  </geometry>
  <material name = "Black"/>
  <origin xyz = "0.1 0.3 0"/>
 </visual>
</link>

<link name = "Gripper_finger_2">
 <visual>
  <geometry>
   <box size = "0.1 0.6 0.2"/>
  </geometry>
  <material name = "Black"/>
  <origin xyz = "-0.1 0.3 0"/>
 </visual>
</link>


<!--JOINTS-->

<joint name = "Joint_1" type = "revolute">
 <parent link = "Base"/>
 <child link = "Base_Shoulder"/>
 <axis xyz="0 0 1"/>
 <limit effort="1000.0" lower="-3.14159265359" upper="3.14159265359" velocity="0.5" />
 <origin xyz ="0 0 0.3"/>
</joint>

<joint name = "Joint_2" type = "revolute">
 <parent link = "Base_Shoulder"/>
 <child link = "Shoulder_Elbow"/>
 <axis xyz ="1 0 0"/>
 <origin xyz = "0 0 0.6"/>
 <limit effort="1000.0" lower="-3.14159265359" upper="3.14159265359" velocity="0.5" />
</joint>

<joint name = "Joint_3" type = "revolute">
 <parent link = "Shoulder_Elbow"/>
 <child link = "Elbow_Forearm"/>
 <axis xyz ="1 0 0"/>
 <origin xyz = "0 0.6 0"/>
 <limit effort="1000.0" lower="-3.14159265359" upper="3.14159265359" velocity="0.5" />
</joint>


<joint name = "Effector" type="fixed">
 <parent link ="Elbow_Forearm"/>
 <child link ="tool_null" />
 <origin xyz = "0 0.6 0"/>
</joint>

<joint name = "Gripper" type="fixed">
 <parent link ="Elbow_Forearm"/>
 <child link ="Gripper_base" />
 <origin xyz = "0 0.6 0"/>
</joint>

<joint name = "Gripper_joint_1" type = "prismatic">
 <parent link = "Gripper_base"/>
 <child link = "Gripper_finger_1"/>
 <axis xyz = "1 0 0"/>
 <limit lower = "0" upper = "0.1" effort = "100" velocity = "0.1"/>
 <origin xyz = '0 0 0'/>
</joint>

<joint name = "Gripper_joint_2" type = "prismatic">
 <parent link = "Gripper_base"/>
 <child link = "Gripper_finger_2"/>
 <axis xyz = "1 0 0"/>
 <limit lower = "0" upper = "0.1" effort = "100" velocity = "0.1"/>
 <mimic joint ="Gripper_joint_1" multiplier = "-1" offset = "0"/>
  <origin xyz = '0 0 0'/>
</joint>


</robot>
